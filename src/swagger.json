            "tags": ["Car"],
            "security": [{"bearerAuth": []}],
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "description": "Change any information by using the id of the car.",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }}],
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {"$ref":"#/components/schemas/CarSchema"},
                        "examples": {
                            "car": {
                                "value": {
                                    "color": "vermelho",
                                    "year": "2022"            
                                }}}}}},
            "responses": {
                "200": {
                    "description": "OK."
                },
                "404": {
                    "description": "Not found."
                }}},
        "delete": {
            "summary": "Delete a specific car.",
            "description": "Delete a specific car registered on the system by using his id.",
            "tags": ["Car"],
            "security": [{"bearerAuth": []}],
            "parameters": [
                {
                    "name": "id",
