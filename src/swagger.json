                {
                  "name": "id",
                  "in": "path",
                  "description": "Search for a car for his ID",
                  "required": true,
                  "schema": {
                    "type": "string"
                  }}],
                    "responses": {
                        "200": {
                          "description": "Good Request",
                          "content": {
                            "application/json": {
                              "schema": {
